
<view class='news-datail-container'>
  <image class='head-img' src="../{{articleImg}}"></image>
  <view class='author-time'>
    <image class='author-avatar' src="../{{authorIcon}}"></image>
    <text class="author-name">{{authorName}}</text>
    <text class="const-text">发表于</text>
    <text class="time">{{authorDate}}</text>
    <!-- 音乐播放 -->
    <image catchtap="playermusic" class="music" src="../../images/eartag.png"></image>
  </view>
  <text class='title'>{{title}}</text>
  <view class='tool'>
    <view class='circle-img'>
      <image catchtap="onCollected" wx:if="{{collected}}" src="../../images/sch.png"></image>
      <image catchtap="onCollected" wx:else src="../../images/sc.png"></image>
      <image class='share-img' src='../../images/fx.png'></image>
    </view>
    <view class='horizon'></view>
  </view>
  <text class='detail'>{{articleText}}</text>
  <view class="comment">
    <view class="commentblock">评价</view>
  </view>
</view>